<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mediclinic.controller.PatientController"
      spacing="20" styleClass="form-container">

    <HBox spacing="20" alignment="CENTER_LEFT">
        <Label text="Gestion des Patients" styleClass="section-title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="+ Nouveau Patient" styleClass="btn-primary" onAction="#showAddPatientForm" fx:id="addPatientBtn"/>
    </HBox>

    <!-- Barre de Recherche -->
    <HBox spacing="15" alignment="CENTER_LEFT">
        <TextField fx:id="searchField" promptText="Rechercher un patient..." styleClass="text-field" HBox.hgrow="ALWAYS"/>
        <ComboBox fx:id="filterCombo" promptText="Filtrer par" styleClass="combo-box"/>
        <Button text="Rechercher" styleClass="btn-primary" onAction="#handleSearch"/>
    </HBox>

    <!-- Statistiques Patients -->
    <HBox fx:id="statsBox" spacing="15" managed="false" visible="false">
        <VBox styleClass="stats-card" spacing="8" HBox.hgrow="ALWAYS" alignment="CENTER">
            <Label text="PATIENTS TOTAUX" styleClass="stats-category"/>
            <Label fx:id="totalPatientsStatLabel" text="0" styleClass="stats-number"/>
            <Label text="Enregistrés" styleClass="stats-label"/>
        </VBox>

        <VBox styleClass="stats-card" spacing="8" HBox.hgrow="ALWAYS" alignment="CENTER">
            <Label text="NOUVEAUX" styleClass="stats-category"/>
            <Label fx:id="newPatientsMonthLabel" text="0" styleClass="stats-number"/>
            <Label text="Ce Mois" styleClass="stats-label"/>
        </VBox>

        <VBox styleClass="stats-card" spacing="8" HBox.hgrow="ALWAYS" alignment="CENTER">
            <Label text="ACTIFS" styleClass="stats-category"/>
            <Label fx:id="activePatientsLabel" text="0" styleClass="stats-number"/>
            <Label text="En suivi" styleClass="stats-label"/>
        </VBox>

        <VBox styleClass="stats-card" spacing="8" HBox.hgrow="ALWAYS" alignment="CENTER">
            <Label text="CONSULTATIONS" styleClass="stats-category"/>
            <Label fx:id="patientsWithConsultLabel" text="0" styleClass="stats-number"/>
            <Label text="Total" styleClass="stats-label"/>
        </VBox>
    </HBox>

    <!-- Tableau des Patients -->
    <TableView fx:id="patientTable" styleClass="table-view" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="80"/>
            <TableColumn fx:id="colNomComplet" text="Nom Complet" prefWidth="200"/>
            <TableColumn fx:id="colEmail" text="Email" prefWidth="200"/>
            <TableColumn fx:id="colTelephone" text="Téléphone" prefWidth="150"/>
            <TableColumn fx:id="colDateNaissance" text="Date Naissance" prefWidth="120"/>
        </columns>
    </TableView>

    <!-- Pagination -->
    <HBox spacing="15" alignment="CENTER">
        <Button fx:id="firstPageBtn" text="Début" styleClass="btn-warning" onAction="#handleFirstPage"/>
        <Button fx:id="prevPageBtn" text="Précédent" styleClass="btn-warning" onAction="#handlePrevPage"/>
        <Label fx:id="pageInfoLabel" text="Page 1" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <Button fx:id="nextPageBtn" text="Suivant" styleClass="btn-warning" onAction="#handleNextPage"/>
        <Button fx:id="lastPageBtn" text="Fin" styleClass="btn-warning" onAction="#handleLastPage"/>
        <Label fx:id="totalPatientsLabel" text="0 patients" style="-fx-text-fill: #7f8c8d;"/>
    </HBox>

</VBox>