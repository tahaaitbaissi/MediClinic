<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mediclinic.controller.AgendaController"
      spacing="20" styleClass="form-container">

    <HBox spacing="20" alignment="CENTER_LEFT">
        <Label text="Agenda des Rendez-vous" styleClass="section-title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="+ Nouveau Rendez-vous" styleClass="btn-primary" onAction="#handleNewAppointment" fx:id="newAppointmentBtn"/>
    </HBox>

    <!-- Filtres et Recherche -->
    <HBox spacing="15" alignment="CENTER_LEFT">
        <DatePicker fx:id="startDatePicker" promptText="Date de début" styleClass="text-field"/>
        <DatePicker fx:id="endDatePicker" promptText="Date de fin" styleClass="text-field"/>
        <ComboBox fx:id="doctorCombo" promptText="Médecin" styleClass="combo-box"/>
        <TextField fx:id="searchField" promptText="Rechercher..." styleClass="text-field"/>
        <Button text="Rechercher" styleClass="btn-primary" onAction="#handleSearch"/>
        <Button text="Actualiser" styleClass="btn-warning" onAction="#handleRefresh"/>
    </HBox>

    <!-- Statistiques Rapides -->
    <HBox spacing="15">
        <VBox styleClass="stats-card" spacing="8" HBox.hgrow="ALWAYS" alignment="CENTER">
            <Label text="AUJOURD'HUI" styleClass="stats-category"/>
            <Label fx:id="todayAppointmentsStatLabel" text="0" styleClass="stats-number"/>
            <Label text="Rendez-vous" styleClass="stats-label"/>
        </VBox>

        <VBox styleClass="stats-card" spacing="8" HBox.hgrow="ALWAYS" alignment="CENTER">
            <Label text="PLANIFIÉS" styleClass="stats-category"/>
            <Label fx:id="plannedAppointmentsLabel" text="0" styleClass="stats-number"/>
            <Label text="À venir" styleClass="stats-label"/>
        </VBox>

        <VBox styleClass="stats-card" spacing="8" HBox.hgrow="ALWAYS" alignment="CENTER">
            <Label text="TERMINÉS" styleClass="stats-category"/>
            <Label fx:id="completedAppointmentsLabel" text="0" styleClass="stats-number"/>
            <Label text="Complétés" styleClass="stats-label"/>
        </VBox>

        <VBox styleClass="stats-card" spacing="8" HBox.hgrow="ALWAYS" alignment="CENTER">
            <Label text="ANNULÉS" styleClass="stats-category"/>
            <Label fx:id="cancelledAppointmentsLabel" text="0" styleClass="stats-number"/>
            <Label text="Total" styleClass="stats-label"/>
        </VBox>
    </HBox>

    <!-- Tableau des Rendez-vous -->
    <TableView fx:id="appointmentTable" styleClass="table-view" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
            <TableColumn fx:id="colTime" text="Date/Heure" prefWidth="180"/>
            <TableColumn fx:id="colPatient" text="Patient" prefWidth="180"/>
            <TableColumn fx:id="colDoctor" text="Médecin" prefWidth="150"/>
            <TableColumn fx:id="colMotif" text="Motif" prefWidth="180"/>
            <TableColumn fx:id="colStatus" text="Statut" prefWidth="100"/>
        </columns>
    </TableView>

    <!-- Actions Rapides -->
    <HBox spacing="15" alignment="CENTER_RIGHT">
        <Button text="Liste d'Attente" styleClass="btn-warning" onAction="#handleWaitingList"/>
        <Button text="Statistiques" styleClass="btn-success" onAction="#handleStatistics"/>
        <Button text="Rapport Quotidien" styleClass="btn-primary" onAction="#handleDailyReport"/>
    </HBox>

</VBox>
